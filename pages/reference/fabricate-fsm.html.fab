âœ³ (def iterated-fsms
    (let [terminal-states
          (filter (fn [s]
                    (let [p (m/properties s)]
                      (and (= :fsm/exit (:fsm/state p))
                           (:fsm/side-effect? p))))
                  (keys write/default-operations))
          ops (apply dissoc write/default-operations terminal-states)]
      (->> (:examples (m/properties write/input-state))
           (map
            (fn [v]
              [v (reduce
                  (fn [states next-state]
                    (if (= (peek states) next-state)
                      (reduced states)
                      (conj states next-state)))
                  []
                  (iterate
                   (fn [v] (fsm/advance ops v write/default-site-settings)) {:fsm/value v}))]))
           (into {}))))ðŸ”š

